{
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
  "OTEL_SERVICE_NAME": "Cdms-Gateway",
  "Mongo": {
    "DatabaseUri": "mongodb://127.0.0.1:27017",
    "DatabaseName": "cdms-gateway"
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o} [{Level:u4}] ({Application}/{MachineName}/{ThreadId}/{SourceContext}.{Method}) {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Routing": {
    "AdditionalRoutes": [
      {
        "Name": "simulator-alvs-ipaffs",
        "RoutedUrlName": "TdmSimulator",
        "UnreturnedUrlName": "Stub"
      },
      {
        "Name": "simulator-cds",
        "RoutedUrlName": "TdmSimulator",
        "UnreturnedUrlName": "Stub"
      },
      {
        "Name": "simulator-alvs-cds",
        "RoutedUrlName": "TdmSimulator",
        "UnreturnedUrlName": "Stub"
      }
    ],
    "NamedUrls": [
      {
        "Name": "Stub",
        "Url": "http://cdms-gateway-stub.localtest.me:3092/"
      },
      {
        "Name": "TdmSimulator",
        "Url": "http://tdm-prototype-backend.localtest.me:3080/simulator/tdm"
      }
    ]
  }
}
